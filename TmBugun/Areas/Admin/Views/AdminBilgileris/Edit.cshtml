@model TmBugun.Models.AdminBilgileri
@if (Session["AdminID"] == null)
{
    Response.Redirect("~/Admin/KayitIslemleri/Login");
}
@{
    ViewBag.Title = "Edit";
}


    <div class="card">
        <div class="card-header card-header-rose card-header-icon">
            <div class="card-icon">
                <i class="material-icons">AB</i>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-3">
                    <h4 class="card-title left">Admin Bilgiler</h4>
                </div>
            </div>

        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.AdminAd, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AdminAd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdminAd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Adminsifre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Adminsifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Adminsifre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="card-footer ">
                    <button type="submit" class="btn btn-fill btn-rose">Guncelle</button>
                    <button type="button" class="btn btn-fill btn-rose" onclick="location.href='@Url.Action("Index", "AdminBilgileris")'">Geri Don</button>
                </div>
            </div>
            }


        </div>
    </div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
