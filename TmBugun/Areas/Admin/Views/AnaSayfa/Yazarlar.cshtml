@model IEnumerable<TmBugun.Models.Yayimci>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header card-header-rose card-header-icon">
                        <div class="card-icon">
                            @if (item.YayimciResim != null)
                            {
                                @Html.Raw("<img style='width:50px; height:50px;' src=\"data:image/jpeg;base64,"
                                 + Convert.ToBase64String(item.YayimciResim) + "\" />")
                            }
                            else
                            {
                                <img class="img" src="~/Areas/assets/img/faces/writingclub.png" style="width:50px; height:50px;" />
                            }
                        </div>
                        <div class="card-body">
                            <a href="~/Admin/Yayimcis/Details/@item.Id">
                                @Html.DisplayFor(modelItem => item.Yayimci_ad)
                                @Html.DisplayFor(modelItem => item.Yayimci_soyad)
                            </a>
                        </div>
                    </div>
                 </div>
            </div>
        }
    </div>

