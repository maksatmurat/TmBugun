@model IEnumerable<TmBugun.Models.Haber>

@if (Session["AdminID"] == null)
{
    Response.Redirect("~/Admin/KayitIslemleri/Login");
}

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header card-header-primary card-header-icon">
        <div class="card-icon">
            <i class="material-icons">inbox</i>
        </div>
        <h4 class="card-title">@ViewData["kategori"]</h4>
    </div>
    <div class="card-body">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
        </div>
        <div class="material-datatables">
            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th><i class="material-icons small">list</i>Haber Basligi</th>
                                    <th><i class="material-icons small">dvr</i> Haber Izlenme Sayisi </th>
                                    <th><i class="material-icons small">favorite</i> Haber Begenme Sayisi </th>
                                    <th class="disabled-sorting text-right">Haberi Sil</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th><i class="material-icons small">list</i>Haber Basligi</th>
                                    <th><i class="material-icons small">dvr</i> Haber Izlenme Sayisi </th>
                                    <th><i class="material-icons small">favorite</i> Haber Begenme Sayisi </th>
                                    <th class="disabled-sorting text-right">Islemler</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <a href="#">
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HaberBaslik)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HaberIzlenmeSayi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HaberBegenmeSayi)
                                            </td>
                                            <td class="text-right">
                                                <a href="~/Admin/Habers/delete/@item.Id" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>
                                            </td>
                                        </tr>
                                    </a>
                                }
                            </tbody>
                        </table>
        </div>
    </div>
</div>
    <!-- end content-->
