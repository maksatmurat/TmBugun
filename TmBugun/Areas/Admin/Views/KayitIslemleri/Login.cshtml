@model TmBugun.Models.AdminBilgileri

@{
    Layout = null;
}

<head>
    <title>Admin Girisi</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Areas/Login_V4/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Login_V4/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @using (Html.BeginForm("Autherize", "KayitIslemleri", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="limiter">
            <div class="container-login100" style="background-image: url('../../../../Areas/Login_V4/images/bg-01.jpg');">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-49">
                            Admin Giriş Yap
                        </span>

                        <div class="wrap-input100 validate-input m-b-23" data-validate="Kullanıcı Adı Gereklidir">
                            <span class="label-input100">Kullanıcı Adı</span>
                            @*<input class="input100" type="text" name="username" placeholder="Kullanıcı Adınız">*@
                            @Html.EditorFor(model => model.AdminAd, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "username", @placeholder = "Kullanıcı Adınız" } })
                            <span class="focus-input100" data-symbol="&#xf206;"></span>
                            @Html.ValidationMessageFor(model => model.AdminAd)
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Şifre Gereklidir">
                            <span class="label-input100">Şifre</span>
                            @*<input class="input100" type="password" name="pass" placeholder="Şifreniz">*@
                            @Html.EditorFor(model => model.Adminsifre, new { htmlAttributes = new { @class = "input100", @type = "password", @name = "pass", @placeholder = "Şifreniz" } })
                            <span class="focus-input100" data-symbol="&#xf190;"></span>
                            @Html.ValidationMessageFor(model => model.Adminsifre)
                        </div>

                        <div class="container-login100-form-btn" style="padding-top:5%">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn" type="submit">
                                    GİRİŞ YAP
                                </button>
                            </div>
                        </div>

                        <div class="flex-col-c p-t-155">
                            <a href="/Home/Index" class="txt2">
                                Ana Sayfa
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Areas/Login_V4/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Areas/Login_V4/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Login_V4/js/main.js"></script>

</body>