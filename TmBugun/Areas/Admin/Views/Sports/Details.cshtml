@model TmBugun.Models.Sport

@if (Session["AdminID"] == null)
{
    Response.Redirect("~/Admin/KayitIslemleri/Login");
}
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card ">
    <div class="card-header card-header-rose card-header-text">
        <div class="card-text">
            <h4 class="card-title">Sport Detayi</h4>
        </div>
    </div>
    <div class="card-body ">
        <form method="get" action="/" class="form-horizontal">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <label class="col-sm-4 col-form-label">Sport Bagli Kategori</label>
                        <div class="col-sm-6" style="padding-top:8px;">
                            <div class="form-group">
                                @Html.DisplayFor(model => model.SportKategorileri.SportKategori)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <label class="col-sm-4 col-form-label">Sport Eklenme Tarihi</label>
                        <div class="col-sm-6" style="padding-top:8px;">
                            <div class="form-group">
                                @Html.Raw(Model.SportTarih.Date.ToString("dd MMM yyyy"))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">Yayimci Adi</label>
                <div class="col-sm-10" style="padding-top:8px;">
                    <div class="form-group">
                        @Html.DisplayFor(model => model.Yayimci.Yayimci_ad)
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">Sport Basligi</label>
                <div class="col-sm-10" style="padding-top:8px;">
                    <div class="form-group">
                        @Html.DisplayFor(model => model.SportBaslik)
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">Haber Icerigi</label>
                <div class="col-sm-10" style="padding-top:8px;">
                    <div class="form-group">
                        @Html.DisplayFor(model => model.SportIcerik)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <label class="col-sm-4 col-form-label">Haber begeni sayi</label>
                        <div class="col-sm-6" style="padding-top:8px;">
                            <div class="form-group">
                                @Html.DisplayFor(model => model.SportBegenmeSayi)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <label class="col-sm-4 col-form-label">Haber Izlenme sayi</label>
                        <div class="col-sm-6" style="padding-top:8px;">
                            <div class="form-group">
                                @Html.DisplayFor(model => model.SportIzlenmeSayi)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
