@model IEnumerable<TmBugun.Models.Sport>

<div class="material-datatables">
    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
        <thead>
            <tr>
                <th><i class="material-icons small">lall_inbox</i>Sport Haber Kategorisi</th>
                <th><i class="material-icons small">list</i>Sport Haber Basligi</th>
                <th><i class="material-icons small">lall_inbox</i>Sport Haber Eklenme Tarihi</th>
                <th><i class="material-icons small">dvr</i>Sport Haber Izlenme Sayisi </th>
                <th><i class="material-icons small">favorite</i> Haber Begenme Sayisi </th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th><i class="material-icons small">lall_inbox</i>Sport Haber Kategorisi</th>
                <th><i class="material-icons small">list</i>Sport Haber Basligi</th>
                <th><i class="material-icons small">lall_inbox</i>Sport Haber Eklenme Tarihi</th>
                <th><i class="material-icons small">dvr</i>Sport Haber Izlenme Sayisi </th>
                <th><i class="material-icons small">favorite</i>Sport Haber Begenme Sayisi </th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SportKategorileri.SportKategori)
                        </td>
                        <td>
                            <a href="/Habers/details/@item.Id">
                                @Html.DisplayFor(modelItem => item.SportBaslik)
                            </a>
                        </td>
                        <td>
                            @Html.Raw(item.SportTarih.Date.ToString("dd MMM yyyy"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SportIzlenmeSayi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SportBegenmeSayi)
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>


