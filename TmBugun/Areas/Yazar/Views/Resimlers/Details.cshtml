                                    </div>
                                    <div class="col-3 col-sm-8">

                                    </div>
                                    
                                    <div class="col-2 col-sm-1" style="padding-left:25px;">
                                        <button type="button" rel="tooltip" title class="btn btn-primary btn-link btn-sm" style="padding:5px;padding-left:0;padding-right:0;border:2px solid blue;height:40px;" data-original-title="Haber Begeni Sayisi">
                                            <h5 class="font-weight-bold" style="padding:0 10px">
                                                <i class="material-icons" style="margin-right:5px;">thumb_up</i>
                                                @Html.DisplayFor(model => model.ResimBegSayi)
