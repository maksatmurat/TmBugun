@model IEnumerable<TmBugun.Models.Sport>
@if (Session["YazarID"] == null)
{
    Response.Redirect("~/Yazar/KayitIslemleri/Login");
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Yazar/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header card-header-rose card-header-icon">
        <div class="card-icon">
            <i class="material-icons">all_inbox</i>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h4 class="card-title left">Sport Haberler</h4>
            </div>
            <a class="col-md-3 col-sm-3 btn btn-success ml-auto" href="~/Yazar/Sports/Create">Sport Ekle</a>
        </div>
    </div>
</div>

<div id="dvSportListesi">
    @Html.Partial("~/Areas/Yazar/Views/Sports/SportHaberListesi.cshtml", Model)
</div>
