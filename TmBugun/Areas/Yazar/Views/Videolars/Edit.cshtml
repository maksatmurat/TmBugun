@model TmBugun.Models.Videolar

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Yazar/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card ">
            <div class="card-header card-header-rose card-header-text">
                <div class="card-text">
                    <h4 class="card-title">Video Guncelleme Formu</h4>
                </div>
            </div>
            <div class="card-body ">
                    <div class="row">
                        <label class="col-sm-2 col-form-label">Video Basligi Turkmence</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                @Html.EditorFor(model => model.VideoBasligi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VideoBasligi, "", new { @class = "text-danger" })
                                <span class="bmd-help">Baslik bos gecilemez</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-2 col-form-label">Video Basligi Inglizce</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                @Html.EditorFor(model => model.VideoBasligiEN, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VideoBasligiEN, "", new { @class = "text-danger" })
                                <span class="bmd-help">Baslik bos gecilemez</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-2 col-form-label">Video Basligi Rusca</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                @Html.EditorFor(model => model.VideoBasligiRU, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VideoBasligiRU, "", new { @class = "text-danger" })
                                <span class="bmd-help">Baslik bos gecilemez</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-2 col-form-label">Video Basligi Turkce</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                @Html.EditorFor(model => model.VideoBasligiTR, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VideoBasligiTR, "", new { @class = "text-danger" })
                                <span class="bmd-help">Baslik bos gecilemez</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-2 col-form-label">Video Linki </label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                @Html.EditorFor(model => model.VideoYol, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VideoYol, "", new { @class = "text-danger" })
                                <span class="bmd-help">Video linkini giriniz</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guncelle" class="btn btn-danger" />
                        </div>
                    </div>
            </div>
        </div>
    </div>
}
