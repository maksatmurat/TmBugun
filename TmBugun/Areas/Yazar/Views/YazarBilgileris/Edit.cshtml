@model TmBugun.Models.Yayimci
<div class="card">
    @using (Html.BeginForm("Edit", "YazarBilgileris", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div class="card-header card-header-icon card-header-rose">
            <div class="card-icon">
                <i class="material-icons">perm_identity</i>
            </div>
            <h4 class="card-title">
                Yazar Profili -
                <small class="category">Yazar Profilini Guncelle</small>
            </h4>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-12"></div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Ad</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Yayimci_ad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Yayimci_ad, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Soyad</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Yayimci_soyad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Yayimci_soyad, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Eposta</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Yayimci_eposta, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Yayimci_eposta, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Sifre</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Yayimci_sifre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Yayimci_sifre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Face</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.YayimciFacebook, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.YayimciFacebook, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Twitter</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.YayimciTwitter, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.YayimciTwitter, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <label class="col-md-3 col-form-label">Yas</label>
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.YayimciYas, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.YayimciYas, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <label class="col-sm-2 col-form-label">Yazar resim</label>
                            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                <div class="fileinput-new thumbnail img-circle">
                                    <img src="~/Areas/assets/img/placeholder.jpg" alt="...">
                                </div>
                                <div class="fileinput-preview fileinput-exists thumbnail img-circle"></div>
                                <div>
                                    <span class="btn btn-round btn-rose btn-file">
                                        <span class="fileinput-new">Add Photo</span>
                                        <span class="fileinput-exists">Change</span>
                                        <input type="file" name="resim" />
                                    </span>
                                    <br />
                                    <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-rose pull-right">Profil Guncelle</button>
                <div class="clearfix"></div>
            </form>
        </div>
    }
</div>
