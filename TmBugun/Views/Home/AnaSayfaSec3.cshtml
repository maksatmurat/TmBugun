@model IEnumerable<TmBugun.Models.Sport>


<div class="row">
    @if (Model is not null)
    {

        foreach (var item in Model)
        {
            <div class="col-md-4">
                <a href="/Haberlers/HaberDetay/@item.Id" style="color:white">

                    <div class="card mb-4" style="margin:10px">

                        <!--Card image-->
                        <div class="view overlay">
                            @Html.Raw("<img style='width:100%; height:220px;' src=\"data:image/jpeg;base64,"
              + Convert.ToBase64String(item.SportResim) + "\" />")
                            <a href="#!">
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        </div>

                        <!--Card content-->
                        <div class="card-body">

                            <!--Title-->
                            <h4 class="card-title" style="font-size:18px;font-weight:bold;">
                                @Html.Raw(item.SportBaslik.ToString().Substring(0, (item.SportBaslik.Length > 100) ? 100 : item.SportBaslik.Length))
                            </h4>
                            <!--Text-->
                            <p class="card-text" style="font-size:14px">
                                @Html.Raw(item.SportIcerik.ToString().Substring(0, (item.SportIcerik.Length > 100) ? 100 : item.SportIcerik.Length))
                            </p>
                            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
                            <h5>
                                <a href="~/Haberlers/kategoriSport/@item.SportkategoriId">
                                    <h5 style="color:#f85050;font-weight:bold">
                                        | @Html.DisplayFor(modelItem => item.SportKategorileri.SportKategori)
                                    </h5>
                                </a>
                            </h5>

                        </div>

                    </div>
                </a>
            </div>

        }
    }
    </div>
