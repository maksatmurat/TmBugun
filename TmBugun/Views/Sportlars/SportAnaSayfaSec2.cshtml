@model IEnumerable<TmBugun.Models.Sport>


<div class="row" style="margin:20px 0 0 0;">
    @foreach (var item in Model)
    {
    <div class="col-12 col-lg-3 col-md-6 col-sm-12" style="margin-bottom:20px;">
        <a href="~/Sportlars/sportdetay/@item.Id" style="color:black;">
            @Html.Raw("<img style='width:100%; height:30%;' src=\"data:image/jpeg;base64,"
                        + Convert.ToBase64String(item.SportResim) + "\" />")
            <div class="">
                <p style="font-size:18px;">
                    @Html.Raw(item.SportBaslik.ToString().Substring(0, (item.SportBaslik.Length > 100) ? 100 : item.SportBaslik.Length))
                </p>
                <p style="font-size:14px;">
                    @Html.Raw(item.SportTarih.Date.ToShortDateString()) | @Html.DisplayFor(modelItem => item.SportKategorileri.SportKategori)
                </p>
            </div>
        </a>

    </div>
    }
</div>