@model IEnumerable<TmBugun.Models.Sport>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-12 col-md-6 col-sm-12" style="padding:10px;">
                    <a href="~/Sportlars/sportdetay/@item.Id" class="text-left" style="color:black;">
                        @if (item.SportResim != null)
                        {
                            @Html.Raw("<img style='width:100%; height:135px;' src=\"data:image/jpeg;base64,"
                                                 + Convert.ToBase64String(item.SportResim) + "\" />")
                        }
                        else { }
                        <h5>
                            @Html.Raw(item.SportBaslik.ToString().Substring(0, (item.SportBaslik.Length > 100) ? 100 : item.SportBaslik.Length))
                        </h5>
                    </a>
                </div>
            }
        </div>
    </div>
