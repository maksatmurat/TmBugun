<script type="text/javascript">
    $(document).ready(function () {
        $("#gonder1").click(function () {
            var yorumunuz = $("#yorum1").val();
            $.ajax({
                type: 'POST',
                url: "/Sportlars/YorumYap1",
                data: { yorum: yorumunuz, kullaniciID:kullaniciID, SportId:@Model.Id },
                dataType: 'json',
                success: function (data) {
                    alert("Yorum Eklendi" + yorumunuz);
                }
            });
        });
        $("#blbengen1").click(function () {
            $.ajax({
                type: 'POST',
                url: "/Sportlars/BlBegen1",
                data: { SportId:@Model.Id },
                dataType: 'json',
                success: function (data) {
                    alert("Blogu Begendiniz");
                }
            });
        });
    }
</script>

